<!--change Anchorpane par Stackpane (le tile panne en arriere plan le pane 1 plan avant le tilepane) pour pouvoir mettre tableview-->

<StackPane styleClass="background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="universite_paris8.iut.ylecoguic.saeterrarialike.controller.Controller">
    <TilePane fx:id="panneauDeJeu" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    <Pane fx:id="panneauJoueur" mouseTransparent="true" />
    <!--tableview pour inventaire -->
    <TableView maxHeight="-Infinity" maxWidth="-Infinity" opacity="0.80" prefHeight="180.0" prefWidth="400.0" StackPane.alignment="BOTTOM_CENTER">
        <columns>
            <TableColumn prefWidth="75.0" text="C1" />
            <TableColumn prefWidth="75.0" text="C2" />
            <TableColumn prefWidth="75.0" text="c3" />
            <TableColumn prefWidth="75.0" text="c4" />
            <TableColumn prefWidth="75.0" text="c5" />
        </columns>
        <StackPane.margin>
            <Insets bottom="10.0" />
        </StackPane.margin>
    </TableView>
   <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="100.0" prefWidth="200.0" StackPane.alignment="TOP_LEFT">
      <children>
         <ImageView>
            <image>
               <Image url="@coeur.png" />
            </image>
         </ImageView>
      </children>
      <StackPane.margin>
         <Insets left="10.0" top="10.0" />
      </StackPane.margin>
   </HBox>
    

</StackPane>
